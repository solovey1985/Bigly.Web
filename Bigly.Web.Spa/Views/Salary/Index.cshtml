<div class="container">
    <div class="row">
        <div id="spreadsheet" style="width: 100%"></div>
        <div class="col-md-6">
            <button class="btn btn-primary" id="save">Save</button>
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary" id="cancel">Cancel</button>
        </div>
    </div>
</div>  
<div class="row" id="container">
    <div data-role="SourceSelector" data-source="ds" data-template="template"></div>
</div>
<script type="text/x-kendo-template" id="template">
    <div style="float: left; color: salmon; margin-right: 10px"><h1>#= data #</h1></div>
</script>

<script>
    $(function(){

        var ds = new kendo.data.DataSource(
        {
            data: [
                { name: "ZP", url: "http://zp.drive-app.net/api" },
                {name: "KV", url: "http://drive-app.net/api"}
            ]
        });

        kendo.bind($("#container"));
        $("#sourceselector").kendoSourceSelector({ dataSource: ds });

       var dataSource = new kendo.data.DataSource({
            type: "json",
            transport: {
                read:  {
                    url: "//localhost:9090/api/salary",
                    dataType: "json"
                },
                update: {
                    url: "//localhost:9090/api/salary",
                    method:'put',
                    dataType: "json",
                    contentType: "application/json"
                },
                destroy: {
                    url: "//localhost:9090/api/salary",
                    dataType: "json",
                    contentType: "application/json"

                },
                create: {
                    url: "//localhost:9090/api/salary",
                    type: 'post',
                    dataType: "json",
                    contentType: "application/json"
                },
                parameterMap: function(options, operation) {
                    
                    if (operation !== "read" && options.models) {
                        return JSON.stringify(options.models);
                    }
                }
            },
            batch: true,
            change: function() {
                $("#cancel, #save").toggleClass("k-state-disabled", !this.hasChanges());
            },
            schema: {
                model: {
                    id: "Id",
                   fields: {
                        Id: { from:"Id", type: "number" },
                        FirstName: { type: "string" },
                        LastName: { type: "string" },
                        RatePosition: { type: "string" },
                        PaidAmount: { type: "number" },
                        Since: { type: "date" },
                        Till: { type: "date" }
                    }
                }
            }
        });
        $("#spreadsheet").kendoSpreadsheet({ 
            sheets: [{
            name: "Salary",
            dataSource: dataSource
            }]
        });

        $("#save").click(function () {
            if (!$(this).hasClass("k-state-disabled")) {
               dataSource.sync();
            }
        });

        $("#cancel").click(function () {
            if (!$(this).hasClass("k-state-disabled")) {
                dataSource.cancelChanges();
            }
        });
    });
</script>